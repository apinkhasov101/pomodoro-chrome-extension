{
  "manifest_version": 3,
  "name": "Pomodoro Timer",
  "version": "1.0",
  "description": "Extension that allows user to select an amount of time (in minutes) to countdown from.",
  "action": {
    "default_popup": "index.html",
    "default_icon": "tomato.png",
    // "permissions": ["activeTab", "background"]
    "background": {
      "service_worker": "background.js",
      "permissions": ["storage", "alarms"],
      "resources": ["tomatoes-73913_640.jpg"],
      "scripts": ["background.js"],
      "persistent": false
    }
  }
}

// change icon of Extention from puzzle piece to Tomato
